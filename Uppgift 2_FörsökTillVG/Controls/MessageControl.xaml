<UserControl x:Class="Uppgift_2_FörsökTillVG.Controls.MessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uppgift_2_FörsökTillVG.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="280">
    <Button Background="Transparent" Width="280" Height="75" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Grid.Column="0" Margin="5,0,0,0"  >
                <TextBlock x:Name="tbFrom" Text="" FontFamily="Garamond" FontSize="18" FontWeight="Bold" />
                <TextBlock x:Name="tbSubject" Text="" FontSize="14"  />

            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1" Margin="0,0,5,0">
                <TextBlock x:Name="tbDate" Text="" HorizontalAlignment="Right" Margin="0,1,0,0"/>
                <TextBlock x:Name="tbTime" Text="" HorizontalAlignment="Right" />
            
            </StackPanel>
        </Grid>
  </Button>
</UserControl>
